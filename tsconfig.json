{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",                    /* Recomendado para Node 20 */
    "moduleResolution": "Node16",          /* Elimina el error de deprecaci√≥n */
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}